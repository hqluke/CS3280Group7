<Window x:Class="GroupProject.Main.wndMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupProject.Main"
        mc:Ignorable="d"
        Title="Main Window" Height="450" Width="800">

    <Grid Style="{StaticResource DarkGrid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="33"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Height="33" Width="159" HorizontalAlignment="Left" Background="#FF313131">
            <Button Content="Edit Items" Margin="0" Click="menuEditItemsClicked"/>
            <Button Content="Search" Margin="0" Click="menuSearchClicked"/>
        </Menu>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label x:Name="labelEditMode" Grid.Row="0" 
                       Content="Edit Mode Enabled" 
                       Foreground="White" 
                       FontWeight="Bold" 
                       FontSize="20" 
                       Visibility="Hidden"
                       Margin="0,0,0,0"/>

                <Grid Grid.Row="1" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="labelInvoiceDate" Grid.Column="0" Content="Invoice Date:" />
                    <Label x:Name="labelInvoiceDateDisplay" Grid.Column="1" Content="" />
                </Grid>

                <Grid Grid.Row="2" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="labelInvoiceNumber" Grid.Column="0" Content="Invoice Number:" />
                    <Label x:Name="labelInvoiceNumberDisplay" Grid.Column="1" Content="" />
                </Grid>

                <Grid Grid.Row="3" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="labelInvoiceTotalCost" Grid.Column="0" Content="Total Cost:" />
                    <Label x:Name="labelInvoiceTotalCostDisplay" Grid.Column="1" Content="" />
                </Grid>
                
                <Grid Grid.Row="5" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="labelItems" Grid.Column="0" Content="Items:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="comboBoxItems" Grid.Column="1" 
                              SelectionChanged="comboBoxItems_SelectionChanged"
                              Margin="5,0,91,0"/>
                </Grid>

                <Grid Grid.Row="6" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="labelItemCost" Grid.Column="0" Content="Cost:" />
                    <Label x:Name="labelItemCostDisplay" Grid.Column="1" Content="" />
                </Grid>

                <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                    <Button x:Name="buttonAddItem" Content="Add Item" Width="74" Click="buttonAddItem_Click" Margin="5,0,0,0" Height="20"/>
                    <Button x:Name="buttonRemoveItem" Content="Remove Item" Width="90" Click="buttonRemoveItem_Click" Margin="20,0,0,0" Height="20"/>
                </StackPanel>
            </Grid>

            <DataGrid Grid.Column="1" 
                      x:Name="dgInvoice" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True" 
                      SelectionChanged="dgInvoice_SelectionChanged" 
                      ColumnWidth="*"
                      Margin="20,0,0,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="*" Header="Item Code" Binding="{Binding Path=Code}"/>
                    <DataGridTextColumn Width="2*" Header="Description" Binding="{Binding Path=Description}"/>
                    <DataGridTextColumn Width="1.2*" Header="Cost" Binding="{Binding Path=Cost, StringFormat=C}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid Grid.Row="2" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label x:Name="errorLabel" 
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Grid.Row="1" 
                   Content="Your are not currently editing an invoice" 
                   Foreground="Red" 
                   FontWeight="Bold" 
                   Visibility="Hidden"
                   HorizontalAlignment="Left"
                   Margin="0,5,0,0"/>

            <Grid Grid.Column="1" Grid.Row="0" Margin="20,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="buttonEditInvoice" 
                        Content="Edit Invoice" 
                        Width="82" 
                        Height="24" 
                        Click="buttonEditInvoice_Click" 
                        IsEnabled="False"
                        HorizontalAlignment="Left"/>
                <Button x:Name="buttonSaveInvoice" 
                        Content="Save Invoice" 
                        Width="82" 
                        Height="24" 
                        Click="buttonSaveInvoice_Click" 
                        IsEnabled="False"
                        HorizontalAlignment="Left" Margin="165,0,0,0"/>
                <Button x:Name="buttonCreateNewInvoice"
                        Content="Create New Invoice" 
                        Height="24" 
                        Click="buttonCreateNewInvoice_Click" HorizontalAlignment="Left" Width="134" Margin="330,0,0,0"/>
            </Grid>
        </Grid>
    </Grid>
</Window>