<Window x:Class="GroupProject.Main.wndCreateInvoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupProject.Main"
        mc:Ignorable="d"
        Title="Create Invoice" Height="200" Width="300">
    <Canvas>
        <Button x:Name="buttonConfirm" Content="Confirm" Canvas.Left="34" Canvas.Top="129" Width="100" HorizontalAlignment="Center" VerticalAlignment="Top" Click="buttonConfirm_Click"/>
        <Button x:Name="buttonCancel" Content="Cancel" Canvas.Left="166" Canvas.Top="129" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.19,0.453" Click="buttonCancel_Click"/>
        <Label x:Name="labelInvoiceNumber"  Content="Invoice Number: " Canvas.Left="35" Canvas.Top="14" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="labelInvoiceDate"  Content="Invoice Date: " Canvas.Left="35" Canvas.Top="62" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="errorLabelEmpty"  Content="Must be a valid date: mm/dd/yyyy" Canvas.Left="43" Canvas.Top="98" Foreground="Red" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden"/>
        <Label x:Name="labelInvoiceNumberTBD"  Content="TBD" Canvas.Left="140" Canvas.Top="14" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <DatePicker  x:Name="dP" Canvas.Left="146" Canvas.Top="64" IsTodayHighlighted="True"/>

    </Canvas>
</Window>
