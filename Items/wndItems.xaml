<Window x:Class="GroupProject.Items.wndItems"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupProject.Items"
        mc:Ignorable="d"
        Title="windowItems" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Item Management" 
                   FontSize="18" FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <DataGrid Grid.Row="1" x:Name="dgItems" 
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="0,0,0,10"
                  SelectionChanged="dgItems_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Item Code" Binding="{Binding Code}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                <DataGridTextColumn Header="Cost" Binding="{Binding Cost, StringFormat=C}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Content="Code:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" x:Name="txtCode" VerticalAlignment="Center" Padding="3"/>

            <Label Grid.Column="3" Content="Description:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="4" x:Name="txtDescription" VerticalAlignment="Center" Padding="3"/>

            <Label Grid.Column="6" Content="Cost:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="7" x:Name="txtCost" VerticalAlignment="Center" Padding="3"/>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnAdd" Content="Add Item" 
                    Width="100" Height="30" Margin="5"
                    Click="btnAdd_Click"/>
            <Button x:Name="btnEdit" Content="Edit/Save Item" 
                    Width="100" Height="30" Margin="5"
                    Click="btnEdit_Click" IsEnabled="False"/>
            <Button x:Name="btnDelete" Content="Delete Item" 
                    Width="100" Height="30" Margin="5"
                    Click="btnDelete_Click" IsEnabled="False"/>
            <Button x:Name="btnClose" Content="Close" 
                    Width="100" Height="30" Margin="5"
                    Click="btnClose_Click"/>
        </StackPanel>

        <Border Grid.Row="4" Padding="5" Margin="0,10,0,0">
            <TextBlock x:Name="lblStatus" Text="" 
                       FontWeight="Normal" TextWrapping="Wrap"/>
        </Border>
    </Grid>
</Window>
